@model sdb.Models.SdbCompaigns

@{
    ViewData["Title"] = "EditCampaign";
    Layout = "~/Areas/Ngo/Views/Shared/_Layout.cshtml";
}

<h2>EditCampaign</h2>
<div class="col-md-4">

    <form asp-action="EditCampaign" asp-controller="Campaign">
        @*data-ajax="true"
            data-ajax-update="#TR_@Model.Id"
            data-ajax-success="closeEditCampaignViewForm()"*@
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Image" />
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
                    <label asp-for="CampaignImage" class="col-form-label"></label>
                    <div class="col-sm-10">
                        <div class="custom-file">
                            @*Photo property type is IFormFile, so ASP.NET Core
                            automatically creates a FileUpload control  *@
                            <input asp-for="CampaignImage" class="custom-file-input form-control">
                            <label class="custom-file-label">Click here to change photo</label>
                        </div>
                    </div>
                </div>

        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="TotalAmountNeeded" class="control-label"></label>
            <input asp-for="TotalAmountNeeded" class="form-control" />
            <span asp-validation-for="TotalAmountNeeded" class="text-danger"></span>
        </div>


        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
            });

            $('.custom-file-input').val($('#Image').val());
        });
</script>

