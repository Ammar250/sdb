@model IEnumerable<sdb.Models.SdbCompaigns>

<div class="col-md-12 form-group">
    <table id="Campaigntbl" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>
                    Title
                </th>
                <th>
                    Image
                </th>
                <th>
                    Compaign Purpose
                </th>
                <th>
                    User_Id
                </th>
                <th>
                    Description
                </th>
                <th>
                    Total Amount Needed
                </th>
                <th>
                    Collected Amount
                </th>
                <th>
                    Status
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Image)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CompaignPurpose)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TotalAmountNeeded)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CollectedAmount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    
                        @*<td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |

                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>*@
                </tr>
            }
        </tbody>
    </table>
    
</div>
